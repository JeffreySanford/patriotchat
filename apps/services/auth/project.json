{
  "name": "auth",
  "projectType": "application",
  "sourceRoot": "apps/services/auth/src",
  "prefix": "auth",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["dist/apps/services/auth/**"],
      "options": {
        "command": "go build -o dist/apps/services/auth/auth ./src",
        "cwd": "apps/services/auth"
      },
      "configurations": {
        "production": {
          "optimization": true,
          "sourceMap": false,
          "namedChunks": false,
          "aot": true,
          "extractLicenses": true,
          "vendorChunk": false
        }
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "go run ./src",
        "cwd": "apps/services/auth",
        "env": {
          "PORT": "4001",
          "DB_HOST": "localhost",
          "DB_PORT": "5432",
          "DB_USER": "postgres",
          "DB_PASSWORD": "postgres",
          "DB_NAME": "patriotchat"
        }
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "go test ./...",
        "cwd": "apps/services/auth"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/services/auth/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "docker": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker build -t patriotchat-auth:latest apps/services/auth"
      }
    }
  },
  "tags": ["scope:services", "type:app"]
}
