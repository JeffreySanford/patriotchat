{
  "name": "auth",
  "projectType": "application",
  "sourceRoot": "apps/services/auth/src",
  "prefix": "auth",
  "targets": {
    "build": {
      "executor": "@nx/node:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/services/auth",
        "main": "apps/services/auth/src/main.go",
        "tsConfig": "apps/services/auth/tsconfig.app.json",
        "assets": []
      },
      "configurations": {
        "production": {
          "optimization": true,
          "sourceMap": false,
          "namedChunks": false,
          "aot": true,
          "extractLicenses": true,
          "vendorChunk": false
        }
      }
    },
    "serve": {
      "executor": "@nx/node:execute",
      "options": {
        "buildTarget": "auth:build"
      }
    },
    "test": {
      "executor": "@nx/node:test",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/services/auth/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/services/auth/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "docker": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker build -t patriotchat-auth:latest apps/services/auth"
      }
    }
  },
  "tags": ["scope:services", "type:app"]
}
