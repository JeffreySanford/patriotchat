{
  "name": "api-gateway",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/services/api-gateway/src",
  "prefix": "patriotchat",
  "tags": ["type:service", "scope:backend"],
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/services/api-gateway",
        "main": "apps/services/api-gateway/src/main.ts",
        "tsConfig": "apps/services/api-gateway/tsconfig.json",
        "assets": [],
        "format": ["cjs"],
        "platform": "node",
        "target": "node18",
        "bundle": true
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false,
          "sourceMap": false
        },
        "development": {}
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@nx/js:node",
      "options": {
        "buildTarget": "api-gateway:build"
      }
    },
    "docker": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker build -t patriotchat-api-gateway:latest -f apps/services/api-gateway/Dockerfile ."
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest run",
        "cwd": "apps/services/api-gateway"
      },
      "configurations": {},
      "cache": true,
      "inputs": ["default"]
    }
  }
}
