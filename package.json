{
  "name": "@patriotchat/source",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start:deps": "docker compose up -d",
    "start": "pnpm nx run-many --target=serve --projects=frontend,api-gateway,auth",
    "start:frontend": "pnpm nx serve frontend --port 4200",
    "start:api": "pnpm nx serve api --port 3000",
    "start:all": "concurrently \"pnpm run start:deps\" \"pnpm run start\"",
    "build": "pnpm nx run-many --target=build",
    "lint": "pnpm nx lint",
    "lint:typed": "pnpm exec eslint . --ext .ts,.tsx --max-warnings=0",
    "prepare": "husky install",
    "lint:staged": "pnpm exec lint-staged",
    "test": "pnpm nx test"
  },
  "lint-staged": {
    "*.(ts|tsx|js|jsx)": [
      "pnpm exec eslint --fix",
      "pnpm exec prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pnpm run lint:staged"
    }
  },
  "private": true,
  "devDependencies": {
    "@angular-devkit/build-angular": "~21.1.2",
