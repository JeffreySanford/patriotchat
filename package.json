{
  "name": "@patriotchat/source",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start:frontend": "pnpm nx serve frontend --port 4200",
    "start:api": "pnpm nx serve api --port 3000",
    "start:heavy": "pnpm nx serve heavy --port 4000",
    "start:deps": "docker compose up --build || echo \"No docker-compose.yml or docker not available; skipping deps\"",
    "start:all": "concurrently -n deps,build,frontend,api \"pnpm run start:deps\" \"pnpm run build\" \"pnpm run start:frontend\" \"pnpm run start:api\"",
    "build": "pnpm nx run-many --target=build --projects=frontend,shared --parallel=false",
    "build:watch": "pnpm nx build frontend --configuration=development --watch || echo \"No frontend project found; skipping build:watch\"",
    "lint": "pnpm nx lint",
    "lint:rule-tests": "node tools/eslint-rule-tests/test-rules.js",
    "lint:rule-tests:typing": "node tools/eslint-rule-tests/test-rules-typing.js",
    "lint:rule-tests:typed-lint": "node tools/eslint-rule-tests/test-rules-typed-lint.js",
    "lint:typed": "pnpm exec eslint . --ext .ts,.tsx --max-warnings=0",
    "prepare": "husky install",
    "lint:staged": "pnpm exec lint-staged",
    "test:vitest": "vitest run --config=vitest.config.ts",
    "test": "pnpm nx test",
    "test:api:endpoints": "node test-api-endpoints.js",
    "test:api:e2e": "pnpm nx run api-e2e:e2e"
  },
  "lint-staged": {
    "*.(ts|tsx|js|jsx)": [
      "pnpm exec eslint --fix",
      "pnpm exec prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pnpm run lint:staged"
    }
  },
  "private": true,
  "devDependencies": {
    "@angular-devkit/core": "~21.1.0",
    "@angular-devkit/schematics": "~21.1.0",
    "@angular/build": "~21.1.0",
    "@angular/cli": "~21.1.0",
    "@angular/compiler": "~21.1.0",
    "@angular/compiler-cli": "~21.1.0",
    "@angular/language-service": "~21.1.0",
    "@angular/platform-browser-dynamic": "^21.1.2",
    "@eslint/js": "^9.8.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.0",
    "@nx/angular": "22.4.4",
    "@nx/devkit": "22.4.4",
    "@nx/esbuild": "22.4.4",
    "@nx/eslint": "22.4.4",
    "@nx/eslint-plugin": "22.4.4",
    "@nx/jest": "22.4.4",
    "@nx/js": "22.4.4",
    "@nx/nest": "22.4.4",
    "@nx/node": "22.4.4",
    "@nx/playwright": "22.4.4",
    "@nx/web": "22.4.4",
    "@nx/webpack": "22.4.4",
    "@nx/workspace": "22.4.4",
    "@playwright/test": "^1.36.0",
    "@schematics/angular": "~21.1.0",
    "@swc-node/register": "~1.9.1",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@types/jest": "^30.0.0",
    "@types/node": "20.19.9",
    "@typescript-eslint/utils": "^8.40.0",
    "angular-eslint": "^21.0.1",
    "concurrently": "^8.2.0",
    "esbuild": "^0.19.2",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-playwright": "^1.6.2",
    "eslint-plugin-testing-library": "^7.15.4",
    "eslint-plugin-vitest": "^0.5.4",
    "husky": "^8.0.0",
    "jest": "^30.0.2",
    "jest-environment-node": "^30.0.2",
    "jest-util": "^30.0.2",
    "jsdom": "^27.1.0",
    "jsonc-eslint-parser": "^2.1.0",
    "lint-staged": "^14.0.0",
    "nx": "22.4.4",
    "prettier": "~3.6.2",
    "ts-jest": "^29.4.0",
    "ts-node": "10.9.1",
    "tslib": "^2.3.0",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.40.0",
    "verdaccio": "^6.0.5",
    "vitest": "^4.0.8",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@angular/animations": "~21.1.0",
