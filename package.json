    "@angular/language-service": "~21.1.0",
    "@angular/platform-browser-dynamic": "^21.1.2",
    "@eslint/js": "^9.8.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.0",
    "@nx/angular": "22.4.4",
    "@nx/devkit": "22.4.4",
    "@nx/esbuild": "22.4.4",
    "@nx/eslint": "22.4.4",
    "@nx/eslint-plugin": "22.4.4",
    "@nx/jest": "22.4.4",
    "@nx/js": "22.4.4",
    "@nx/nest": "22.4.4",
    "@nx/node": "22.4.4",
    "@nx/playwright": "^22.4.4",
    "@nx/web": "22.4.4",
    "@nx/webpack": "22.4.4",
    "@nx/workspace": "22.4.4",
    "@playwright/test": "^1.58.1",
    "@schematics/angular": "~21.1.0",
